{% extends "admin/bars.html.twig" %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5> Listing </h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste FAQ</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a href="{{ path('app_admin_new_membershiptypes') }}" class="btn btn-success">NEW</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <form action="{{ path('app_admin_groupaction_faq') }}" id="grpaction" method="post" name="grpaction">
                                <div class="form-group form-inline">
                                    <select class="form-control" name="action" required id="action_select">
                                        <option value="">Action de groupe</option>
                                        <option value="desactiver">Desactiver</option>
                                        <option value="activer">Activer</option>
                                        <option value="supprimer">Supprimer</option>
                                    </select>
                                    <button class="btn btn-primary" type="submit">Go!!</button>
                                </div>

                            </form>
                            <table id="example" class="display table table-striped table-bordered dataminetables" >
                                <thead>
                                <th><input type="checkbox" id="select_all" name="select_all"></th>
                                <th>{{ 'backend.mt.name'|trans }}</th>
                                <th>{{ 'backend.mt.description'|trans }}</th>
                                <th>{{ 'backend.mt.annual_cost'|trans }}</th>
                                <th>{{ 'backend.mt.monthly_amount'|trans }} </th>
                                <th>{{ 'backend.mt.max_members'|trans }}</th>
                                <th>{{ 'backend.mt.modif'|trans }}</th>
                                <th>{{ 'backend.mt.activ'|trans }}</th>
                                <th>{{ 'backend.mt.borrar'|trans }}</th>
                                </thead>
                                <tbody>
                                {% for membershtype in membershtypes|filter(membershtype => membershtype.status)  %}
                                    <tr>
                                        <td><input type="checkbox" class="chkgrp" name="chkgrp[]" value="{{ membershtype.id }}"></td>
                                        <td>{{ membershtype.name }}</td>
                                        <td>{{ membershtype.description }}</td>
                                        <td>{{ membershtype.annualCost }}</td>
                                        <td>{{ membershtype.monthlyAmount }}</td>
                                        <td>{{ membershtype.maxMembers }}</td>
                                        <td><a class="btn btn-primary" href="{{ path('app_admin_edit_mt',{"id":membershtype.id}) }}"><i class="fa fa-edit"></i></a></td>
                                        <td>
                                            {%  if not membershtype.status %}
                                                <a class="btn btn-success activate-link" href="{{ path('app_admin_changevalidite_mt', {'id': membershtype.id}) }}"> <i class="fa fa-check"></i></a>
                                            {% else %}
                                                <a class="btn btn-warning activate-link" href="{{ path('app_admin_changevalidite_mt', {'id': membershtype.id}) }}"> <i class="fa fa-times"></i></a>
                                            {% endif %}
                                        </td>
                                        <td><a href="{{ path('app_admin_delete_mt', {'id': membershtype.id}) }}" class="btn btn-danger disable-btn del-link" type="submit" ><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
